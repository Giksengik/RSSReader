<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CommonTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleTextViewStyle" parent="CommonTextViewStyle">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubtitleTextViewStyle" parent="CommonTextViewStyle">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

</resources>
